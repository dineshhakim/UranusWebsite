@model Uranus.Domain.Entities.TeamMember

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Team Edit</li>
            </ol>
        </div>

    </div><!-- /.row -->
    <div class="row">
        <div class="col-sm-12">
            @Html.AntiForgeryToken()
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">×</a>
                    <h4>Validation Errors</h4>
                    @Html.ValidationSummary()
                </div>
            }
            @using (Html.BeginForm())
            {


                <div class="row">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Name)
                        <div>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Designation)
                        <div>
                            @Html.TextBoxFor(model => model.Designation, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.About)
                        <div>
                            @Html.TextBoxFor(model => model.About, new { @class = "form-control" })
                        </div>
                    </div>



                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.EmailId)
                        <div>
                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.SocialLink)
                        <div>
                            @Html.TextBoxFor(model => model.SocialLink, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Order)
                        <div>
                            @Html.TextBoxFor(model => model.Order, new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.ImageUrl)
                        <div>
                            @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })

                        </div>
                    </div>
                  



                    <div class="clearfix"></div>
                    <div class="form-group col-lg-4"></div>
                    <div class="form-group col-lg-4">
                        <button class="btn btn-primary" type="submit">Submit</button>
                        &nbsp;&nbsp;
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            }


        </div>
    </div>
</div>